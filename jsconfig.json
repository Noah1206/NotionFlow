{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "allowJs": true,
    "checkJs": false,
    "jsx": "preserve",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["frontend/static/js/*"],
      "@css/*": ["frontend/static/css/*"],
      "@utils/*": ["utils/*"]
    }
  },
  "include": [
    "frontend/static/js/**/*.js",
    "*.js"
  ],
  "exclude": [
    "node_modules",
    ".venv",
    "__pycache__",
    "backend/**/*.py",
    "database/**/*.py"
  ]
}