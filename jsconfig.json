{
  "compilerOptions": {
    "target": "ES2020",
    "allowJs": true,
    "checkJs": false,
    "strict": false,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["frontend/static/js/*"],
      "@css/*": ["frontend/static/css/*"],
      "@utils/*": ["utils/*"]
    }
  },
  "include": [
    "frontend/static/js/**/*.js",
    "*.js"
  ],
  "exclude": [
    "node_modules",
    ".venv",
    "__pycache__",
    "backend",
    "database"
  ]
}