{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "NIXPACKS"
    },
    "deploy": {
        "startCommand": "bash -c 'PORT=${PORT:-8080} && gunicorn frontend.app:app --bind 0.0.0.0:$PORT --timeout 120 --workers 2 --threads 4'",
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10
    }
}