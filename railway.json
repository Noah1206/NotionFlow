{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "NIXPACKS",
        "buildCommand": "pip install -r requirements.txt"
    },
    "deploy": {
        "numReplicas": 1,
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10,
        "healthcheckPath": "/health",
        "healthcheckTimeout": 30
    },
    "environments": {
        "production": {
            "build": {
                "builder": "NIXPACKS"
            },
            "deploy": {
                "numReplicas": 1
            }
        }
    }
}